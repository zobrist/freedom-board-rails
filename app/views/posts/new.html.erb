<div class = "container">
  <h1> Add Post </h1>
  <%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
      <% @post.errors.full_messages.each do |msg| %>
        <div class = "alert alert-danger"><%= msg %></div>
      <% end %>
    <% end %>
    <p>
      <%= f.label :user %><br>
      <%= f.text_field :user %>
    </p>

    <p>
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
