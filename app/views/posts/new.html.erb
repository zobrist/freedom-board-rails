<div class = "container">
  <h1> Add Post </h1>
  <%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :user %><br>
      <%= f.text_field :user %>
    </p>

    <p>
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
